{
  "vim.leader": "[",
  "vim.easymotion": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.new"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["editor.action.refactor"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": [";", "t"],
      "commands": ["testing.runAll"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["workbench.action.quickSwitchWindow"]
    },
    {
      "before": ["enter"],
      "commands": ["editor.action.format"]
    },
    {
      // leader -s for "split
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.splitEditorRight"]
    }
  ],
  "vim.smartRelativeLine": true,
  "vim.handleKeys": {
    "f": false,
    "<C-d>": false,
    "<C-t>": false,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "e"],
      "commands": ["editor.action.refactor"]
    }
  ],
  "vim.useSystemClipboard": true,

  "workbench.colorCustomizations": {
    "editorGroupHeader.tabsBackground": "#1A1A1A",
    "editor.background": "#1A1A1A",

    "tab.activeBackground": "#2e19f018",
    "tab.activeForeground": "#1c83fa",

    "titleBar.activeBackground": "#1A1A1A",
    "titleBar.activeForeground": "#1c83fa",

    "statusBar.background": "#1A1A1A",
    "statusBar.focusBorder": "#1A1A1A",

    "activityBar.background": "#1A1A1A",
    "activityBar.foreground": "#1c83fa",

    "editorCursor.foreground": "#ffffff",
    
    "sideBar.background": "#1A1A1A",
    "sideBar.foreground": "#1c83fa",
  },
  "editor.inlineSuggest.enabled": true,
}
